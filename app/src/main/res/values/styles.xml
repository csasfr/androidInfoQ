<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textMenuButton">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/btn_login</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="profileStyle">
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/profile_border</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="AppThemeC" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>


</resources>
